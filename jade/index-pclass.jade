include mixins.jade

- var year = 2016;
- var cost = 50;
-
  var links = {
    'chrome': 'https://www.google.com/intl/en/chrome/browser/',
    'ff': 'http://www.mozilla.org/en-US/firefox/new/',
    'ie': 'http://windows.microsoft.com/en-us/internet-explorer/download-ie',
  }

doctype html

html
  head
    title Punjabi Class Registration
    link(rel='stylesheet', href='style.css')
  body
    h1 #{year} - #{year + 1} Punjabi Class Registration
    p.
      #[b NOTE:] Online registration will only work with the latest versions of
      #[a(href='#{links.chrome}') Chrome], #[a(href='#{links.ff}') Firefox], or
      #[a(href='#{links.ie}') Internet Explorer].
      If the form does not load, please try updating your browser.
    p: b Select the number of students you are registering to begin.

    label(for='numentries') Number of Students:
    select#numentries
      option(value='0') Please choose one
      option(value='1') 1
      option(value='2') 2
      option(value='3') 3
      option(value='4') 4

    form#form.hide
      +student(1)
      +student(2)
      +student(3)
      +student(4)

      hr

      #father-name
        h3 Father's Name
        .section
          +full-name
      #mother-name
        h3 Mother's Name
        .section
          +full-name

      hr

      +address

      hr

      #primary-email
        h3 Primary Email
        +email(true)

      hr

      #secondary-email
        h3 Secondary Email (Optional)
        +email(true)

      hr

      +phone-number

      hr

      .section
        p.
          The payment of the $#[span#cost #{cost}] (total) school fee can be given to Kanwerdip Singh
          in person.

        button#submit.submit Submit
        img#loading.loading.hide(src='loading.gif')
        .clear
        #error-message.red.hide.
          There are some errors in the above form. Please fix the errors and try submitting again.

      script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
      script(src='assert.js')
      script(src='sprintf.js')
      script(src='main.js')
      script(src='https://www.gstatic.com/firebasejs/3.2.1/firebase.js')
      script.
        // Initialize Firebase
        var config = {
          apiKey: "AIzaSyDpBIdaYtvfkTEGsdA32hIyoOCjDL5Apuw",
          authDomain: "punjabi-class-registration.firebaseapp.com",
          databaseURL: "https://punjabi-class-registration.firebaseio.com",
          storageBucket: "punjabi-class-registration.appspot.com",
