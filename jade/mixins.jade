mixin student(id)
  div(id='student-#{id}', class='hide')
    h3 Student #{id}
    +full-name(true)
    +class-selector

mixin class-selector
  label Class:
    select(name='class', id='#{id}')
      option(value='invalid', selected='selected') Please select a grade
      option(value='') I don't know
      option(value='Pre-Kindergarten') Pre-Kindergarten
      option(value='Kindergarten') Kindergarten
      option(value='Grade 1') Grade 1
      option(value='Grade 2') Grade 2
      option(value='Grade 3') Grade 3
      option(value='Grade 4') Grade 4
      option(value='Grade 5') Grade 5

mixin full-name(middle)
  ul.inputs
    li
      label
        span.label-text First name:
        input(type='text' name="first-name")
    li
      if middle === true
        label
          span.label-text Middle name (optional):
          input(type='text' name="middle-name")
    li
      label
        span.label-text Last name:
        input(type='text' name="last-name")

mixin address
  ul.inputs
    li
      label
        span.label-text Street:
        input(type='text', name='street')
    li
      label
        span.label-text City:
        input(type='text', name='city')
    li
      label
        span.label-text State:
        +state-selector
    li
      label
        span.label-text Zip Code:
        input(type='text', name='zipcode')

mixin email
  | email

mixin phone-number
  | number

mixin date
  | date

mixin state-selector
  | state
